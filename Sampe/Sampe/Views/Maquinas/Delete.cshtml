@model Sampe.Maquina

@{
    ViewBag.Title = "Deletar Máquina";
}

<div class="container ">
    <div class="col s12 m8 l9">

        <h2>Deletar Máquina</h2>
        <h6>Tem certeza que deseja excluir?</h6>

        <hr />
        <dl class="dl-horizontal">
            <dt>
               Máquina
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NomeMaquina)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" />
            <a class="btn " href="/Maquinas/Index">Voltar</a>
        </div>
        }
    </div>
</div>
